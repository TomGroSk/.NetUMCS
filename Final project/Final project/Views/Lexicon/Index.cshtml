@model LexiconModel
@{
    ViewData["Title"] = "Index";
}
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <form method="post" asp-action="CreateTechnology">
                    <div class="form-group" style="display: inline-flex">
                        <input class="form-control" asp-for="@Model.CreateName" />
                    </div>
                    <div class="form-group" style="display: inline-flex">
                        <input type="submit" value="+" class="btn btn-dark" />
                    </div>
                </form>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Technology</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var technology in Model.Technologies)
                        {
                        <tr>
                            <td>
                                <div>
                                    @technology.Name
                                    <a asp-route-id="@technology.Id" asp-action="DeleteTechnology" class="btn btn-danger float-right" style="padding:1px; width:32px">-</a>
                                    <a asp-route-id="@technology.Id" asp-action="EditTechnology" class="btn btn-warning float-right"style="padding:1px; margin-right:3px; width:32px">&#128393</a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-sm">
                <form method="post" asp-action="CreateTask">
                    <div class="form-group" style="display: inline-flex">
                        <input class="form-control" asp-for="@Model.CreateName" />
                    </div>
                    <div class="form-group" style="display: inline-flex">
                        <input type="submit" value="+" class="btn btn-dark" />
                    </div>
                </form>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Tasks</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var task in Model.Tasks)
                        {
                        <tr>
                            <td>
                                <div>
                                    @task.Name
                                    <a asp-route-id="@task.Id" asp-action="DeleteTask" class="btn btn-danger float-right" style="padding:1px; width:32px">-</a>
                                    <a asp-route-id="@task.Id" asp-action="EditTask" class="btn btn-warning float-right" style="padding:1px; margin-right:3px; width:32px">&#128393</a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-sm">
                <div style="width: 100%">
                    <form method="post" asp-action="CreateType">
                        <div class="form-group" style="display: inline-flex">
                            <input class="form-control" asp-for="@Model.CreateName" />
                        </div>
                        <div class="form-group" style="display: inline-flex">
                            <input type="submit" value="+" class="btn btn-dark" />
                        </div>
                    </form>
                </div>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var type in Model.Types)
                        {
                        <tr>
                            <td>
                                <div>
                                    @type.Name
                                    <a asp-route-id="@type.Id" asp-action="DeleteType" class="btn btn-danger float-right" style="padding:1px; width:32px">-</a>
                                    <a asp-route-id="@type.Id" asp-action="EditType" class="btn btn-warning float-right" style="padding:1px; margin-right:3px; width:32px">&#128393</a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    

